ontent":["<template>\r\n  <WebHeader />\r\n  <div class=\"movie-detail\">\r\n    <div class=\"video\">\r\n      <iframe\r\n        title=\"movie.title\"\r\n        :src=\"getLink()\"\r\n        allowfullscreen\r\n        allow=\"autoplay\"\r\n        frameborder=\"0\"\r\n      ></iframe>\r\n      <!-- <iframe v-else-if=\"!getLink()\" src=\"video.linkEmbed\" frameborder=\"0\"></iframe> -->\r\n      <!-- <img v-else :src=\"movie.image\" alt=\"\" /> -->\r\n    </div>\r\n    <div class=\"content\">\r\n      <h2>{{ movie.title }}</h2>\r\n      <p>\r\n        <strong><i>Released: </i></strong>{{ movie.releaseDate }}\r\n      </p>\r\n      <p>\r\n        <strong><i>Country: </i></strong>{{ countries.countryName }}\r\n      </p>\r\n      <p>\r\n        <strong\r\n          >Genre:\r\n          <ul v-for=\"genre in genres\" :key=\"genre.id\">\r\n            <li>{{ genre.genreName }}</li>\r\n          </ul></strong\r\n        >\r\n      </p>\r\n      <p>\r\n        <strong><i>Companies Production: </i></strong>\r\n        {{ companies.companyName }}\r\n      </p>\r\n      <p>\r\n        <strong><i>Runtime: </i></strong> {{ movie.runtime }}\r\n      </p>\r\n      <div>\r\n        <button>\r\n          <svg\r\n            xmlns=\"http://www.w3.org/2000/svg\"\r\n            width=\"16\"\r\n            height=\"16\"\r\n            fill=\"currentColor\"\r\n            class=\"bi bi-heart\"\r\n            viewBox=\"0 0 16 16\"\r\n          >\r\n            <path\r\n              d=\"m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z\"\r\n            />\r\n          </svg>\r\n          Favourite\r\n        </button>\r\n        <button id=\"btnDel\" v-if=\"isAdmin\">Delete Film</button>\r\n      </div>\